<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/notificationPlayButton"
        android:background="@drawable/ic_baseline_play_arrow_24px"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/notificationPauseButton"
        android:background="@drawable/ic_baseline_pause_24px"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/notificationDurationTextView"
        android:text="WWWWWWWWW"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>