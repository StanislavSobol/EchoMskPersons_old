<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/colorMediaPlayerBackground"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageButton
        android:id="@+id/audioPlayImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorMediaPlayerButtonBackground"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/audioSeekBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/audioDurationTextView"
            android:layout_toStartOf="@+id/audioDurationTextView" />

        <TextView
            android:id="@+id/audioDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cancelImageButton"
            android:layout_toStartOf="@+id/cancelImageButton"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            tools:text="00:00" />


        <ImageButton
            android:id="@+id/cancelImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorMediaPlayerButtonBackground"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>